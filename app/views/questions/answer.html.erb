<main class="coach-page answer-page py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-xl-7">
        <div class="coach-card p-4 p-sm-5">
          <div class="text-center mb-4">
            <p class="text-uppercase text-primary fw-semibold small mb-2">Stupid coaching</p>
            <h1 class="display-6 mb-2">Here is your answer</h1>
            <p class="text-muted mb-0">Refresh the page if you want to try a different question.</p>
          </div>

          <div class="conversation-block question-block">
            <p class="conversation-label text-uppercase small fw-semibold text-secondary mb-1">You asked</p>
            <p class="fs-4 mb-2"><%= @question %></p>
            <p class="text-muted mb-0">— You</p>
          </div>

          <div class="conversation-block answer-block">
            <p class="conversation-label text-uppercase small fw-semibold text-secondary mb-1">Coach</p>
            <p class="fs-4 mb-2"><%= @answer %></p>
            <p class="text-muted mb-0">— Coach</p>
          </div>

          <%= link_to "Ask another question", ask_path, class: "btn btn-link px-0 mt-3" %>
        </div>
      </div>
    </div>
  </div>
</main>
